<h1>Listing Tasks <%= link_to "New Task", new_task_path,
class: "btn btn-primary pull-right" %></h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Description
      </th>
      <th>
        Due Date
      </th>
      <th>
        &nbsp;
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= task.description %>
      </td>
      <td>
        <%= task.due_date.strftime("%m/%d/%Y") %>
      </td>
      <td class="text-right">
        <%= link_to "Show", task, class: "btn btn-success" %>
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-info" %>
        <%= link_to "Delete", task, method: :delete, data: {confirm: "Are you sure?"},
         class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
