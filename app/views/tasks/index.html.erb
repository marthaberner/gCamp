<h1>Listing Tasks <%= link_to "New Task", new_task_path,
class: "btn btn-primary pull-right" %></h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Description
      </th>
      <th>
        Due
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= task.description %>
      </td>
      <td>
        <%= task.due_date.strftime("%m/%d/%Y") %>
      </td>
      <td>
        <%= link_to "Show", task, class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
